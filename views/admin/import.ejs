<%- include('../partials/admin-header') %>
<body>
  <div class="content">
    <h2>Import Students to Alumni</h2>
    <form action="/import_students_to_alumni" method="POST" class="form">
      <div class="form-group">
        <label for="batch_year">Batch Year</label>
        <input type="number" id="batch_year" name="batch_year" min="1983" max="2025" required>
      </div>
      <div class="form-group">
        <label for="current_position">Current Position</label>
        <input type="text" id="current_position" name="current_position" required>
      </div>
      <div class="form-group">
        <label for="company">Company</label>
        <input type="text" id="company" name="company" required>
      </div>
      <div class="form-group">
        <label for="location">Location</label>
        <input type="text" id="location" name="location" required>
      </div>
      <button type="submit" class="submit-button">Import</button>
    </form>
  </div>
  <%- include('../partials/admin-footer') %>
</body>