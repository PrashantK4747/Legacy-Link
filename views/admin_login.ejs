<%- include('partials/header') %>
<body>
    <svg class="login__blob" viewBox="0 0 566 840" xmlns="http://www.w3.org/2000/svg">
        <mask id="mask0" mask-type="alpha">
            <path d="M342.407 73.6315C388.53 56.4007 394.378 17.3643 391.538 0H566V840H0C14.5385 834.991 100.266 804.436 77.2046 707.263C49.6393 591.11 115.306 518.927 176.468 488.873C363.385 397.026 156.98 302.824 167.945 179.32C173.46 117.209 284.755 95.1699 342.407 73.6315Z"/>
        </mask>

        <g mask="url(#mask0)">
            <path d="M342.407 73.6315C388.53 56.4007 394.378 17.3643 391.538 0H566V840H0C14.5385 834.991 100.266 804.436 77.2046 707.263C49.6393 591.11 115.306 518.927 176.468 488.873C363.385 397.026 156.98 302.824 167.945 179.32C173.46 117.209 284.755 95.1699 342.407 73.6315Z"/>

            <image class="login__img" href="/img/bg-img.jpg"/>
        </g>
    </svg>

    <div class="login container grid" id="loginAccessRegister">
        <div class="login__access">
            <h1 class="login__title">Log In as Admin</h1>

            <div class="login__area">
                <form action="/admin_login" method="POST" class="login__form" id="admin_form" name="admin_form">
                    <div class="login__content grid">
                        <div class="login__box">
                            <input type="text" name="username" id="usernameInput" required placeholder="" class="login__input" autocomplete="username">
                            <label for="usernameInput" class="login__label">Enter username</label>
                            <i class="ri-mail-fill login__icon"></i>
                        </div>
                        
                        <div class="login__box">
                            <input type="password" name="password" id="passwordInput" required placeholder=" " class="login__input" autocomplete="current-password">
                            <label for="passwordInput" class="login__label">Password</label>
                            <i class="ri-eye-off-fill login__icon login__password" id="loginPassword"></i>
                        </div>
                    </div>

                    <% if (error) { %>
                     <p style="color: red;"><%= error %></p>
                   <% } %>

                    <a href="#" class="login__forgot">Forgot your password?</a>

                    <button type="submit" class="login__button">Log In</button>
                </form>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const errorMessage = document.getElementById('errorMessage');
            if (errorMessage) {
                setTimeout(function() {
                    errorMessage.style.display = 'none';
                }, 3000); // Hide after 3 seconds (3000 milliseconds)
            }
        });
    </script>

    <script src="/js/main.js"></script>

<%- include('partials/footer') %>
<style>
   .error-message-container {
       margin-top: 10px; /* Add some space above the error message */
       text-align: center; /* Center the error message */
   }
   
   .error-message {
       color: red;
       font-size: 0.9rem; /* Adjust font size for better responsiveness */
       padding: 8px 12px; /* Add padding for better visual appearance */
       background-color: #ffebee; /* Light red background */
       border-radius: 4px; /* Rounded corners */
       display: inline-block; /* Make it inline block */
       width: 90%; /*make it responsive*/
       max-width: 300px;
   }
   </style>